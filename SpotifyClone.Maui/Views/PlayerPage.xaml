<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotifyClone.Maui.Views.PlayerPage"
             xmlns:viewmodel="clr-namespace:SpotifyClone.Maui.ViewModels"
             x:DataType="viewmodel:PlayerViewModel"
             Title="{Binding Title}" BackgroundColor="#121212">
    <Grid Padding="20" RowDefinitions="*, Auto, Auto, Auto" RowSpacing="20">
        <Border Grid.Row="0" StrokeShape="Rectangle" StrokeThickness="0" Margin="20" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Aspect="AspectFit" Source="{Binding Song.ImageUrl, TargetNullValue='dotnet_bot.png'}" WidthRequest="300" HeightRequest="300"/>
        </Border>
        <VerticalStackLayout Grid.Row="1" HorizontalOptions="Center" Spacing="5">
            <Label Text="{Binding Song.Title}" TextColor="White" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Label Text="{Binding Song.SingerName}" TextColor="Gray" FontSize="18" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
        <BoxView Grid.Row="2" HeightRequest="2" BackgroundColor="Gray" Margin="0, 20"/>
        <HorizontalStackLayout Grid.Row="3" Spacing="40" HorizontalOptions="Center">
            <ImageButton Source="shuffle.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent"/>
            <ImageButton Source="skip_previous.png" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent"/>
            <ImageButton Source="pause_circle.png" WidthRequest="70" HeightRequest="70" BackgroundColor="Transparent"/>
            <ImageButton Source="skip_next.png" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent"/>
            <ImageButton Source="repeat.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>