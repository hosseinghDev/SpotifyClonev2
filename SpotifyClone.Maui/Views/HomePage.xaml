<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotifyClone.Maui.Views.HomePage"
             xmlns:viewmodel="clr-namespace:SpotifyClone.Maui.ViewModels"
             xmlns:model="clr-namespace:SpotifyClone.Maui.Models"
             x:DataType="viewmodel:HomeViewModel"
             Title="{Binding Title}" BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">
    <!-- Hide the default nav bar -->

    <Grid RowDefinitions="Auto, Auto, *">

        <!-- Custom Title Bar with Logout Button -->
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Padding="15,10">
            <Label Text="Home" FontSize="24" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
            <ImageButton Grid.Column="1" 
                         Source="logout.png" 
                         Command="{Binding LogoutCommand}"
                         WidthRequest="28" HeightRequest="28" 
                         BackgroundColor="Transparent"
                         VerticalOptions="Center"/>
        </Grid>

        <!-- Search Bar -->
        <SearchBar Grid.Row="1" Placeholder="Search songs, artists, genres..." Text="{Binding SearchText}"
                   SearchCommand="{Binding LoadSongsCommand}" BackgroundColor="#2a2a2a" PlaceholderColor="Gray" TextColor="White" Margin="10"/>

        <!-- Song List -->
        <CollectionView Grid.Row="2" ItemsSource="{Binding Songs}" SelectionMode="None">
            <!-- In HomePage.xaml -->
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Song">
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto" RowSpacing="5">

                        <!-- Main tap gesture on the Grid (for tapping text/image) -->
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=PlaySongCommand}" CommandParameter="{Binding .}"/>
                        </Grid.GestureRecognizers>

                        <Border Grid.Column="0" StrokeShape="RoundRectangle 5" StrokeThickness="0" WidthRequest="60" HeightRequest="60">
                            <Image Aspect="AspectFill" Source="{Binding ImageUrl, TargetNullValue='dotnet_bot.png'}" WidthRequest="60" HeightRequest="60"/>
                        </Border>

                        <VerticalStackLayout Grid.Column="1" Padding="10,0" VerticalOptions="Center">
                            <Label Text="{Binding Title}" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                            <Label Text="{Binding SingerName}" TextColor="Gray" FontSize="14">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=GoToSingerProfileCommand}" CommandParameter="{Binding SingerId}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>

                        <ImageButton Grid.Column="2" Source="{Binding IsLiked, Converter={StaticResource BoolToHeartIconConverter}}" WidthRequest="25" HeightRequest="25" BackgroundColor="Transparent"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=ToggleLikeCommand}" CommandParameter="{Binding .}"/>
                        <ImageButton Grid.Column="3" Source="plus_circle.png" WidthRequest="25" HeightRequest="25" BackgroundColor="Transparent" Margin="5,0"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=AddToPlaylistCommand}" CommandParameter="{Binding .}"/>
                        <ImageButton Grid.Column="4" Source="comments.png" WidthRequest="25" HeightRequest="25" BackgroundColor="Transparent"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=GoToCommentsCommand}" CommandParameter="{Binding Id}"/>

                        <!--  Command and CommandParameter -->
                        <ImageButton Grid.Column="5" Source="play_circle.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:HomeViewModel}}, Path=PlaySongCommand}"
                         CommandParameter="{Binding .}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout Padding="20">
                    <Label Text="No songs found." TextColor="Gray" HorizontalOptions="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <ActivityIndicator Grid.Row="2" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" Color="#1DB954" VerticalOptions="Center" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>