<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotifyClone.Maui.Views.LibraryPage"
             xmlns:viewmodel="clr-namespace:SpotifyClone.Maui.ViewModels"
             xmlns:model="clr-namespace:SpotifyClone.Maui.Models"
             x:DataType="viewmodel:LibraryViewModel"
             Title="{Binding Title}" BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">
        <Label Grid.Row="0" Text="Library" FontSize="24" FontAttributes="Bold" TextColor="White" Padding="15,10"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="10">

                <!-- Playlists Section (using a BindableLayout for consistency) -->
                <Frame BackgroundColor="#2a2a2a" CornerRadius="10" Padding="15" BorderColor="Transparent">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Playlists" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                        <Button Text="+ Create Playlist" Command="{Binding CreatePlaylistCommand}" 
                                BackgroundColor="#535353" TextColor="White" HeightRequest="45" CornerRadius="22"/>

                        <!-- REPLACED CollectionView with BindableLayout -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Playlists}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="model:Playlist">
                                    <Grid Padding="0,8" ColumnDefinitions="Auto,*,Auto">
                                        <Border StrokeShape="RoundRectangle 5" StrokeThickness="0" WidthRequest="50" HeightRequest="50" BackgroundColor="#404040">
                                            <Image Source="library.png" Aspect="AspectFit" Margin="10"/>
                                        </Border>
                                        <Label Grid.Column="1" Text="{Binding Name}" TextColor="White" VerticalOptions="Center" Margin="10,0"/>
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:LibraryViewModel}}, Path=GoToPlaylistDetailCommand}" CommandParameter="{Binding .}"/>
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Liked Songs Section -->
                <Frame BackgroundColor="#2a2a2a" CornerRadius="10" Padding="15" BorderColor="Transparent">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Liked Songs" FontSize="18" FontAttributes="Bold" TextColor="White"/>

                        <!--  Replaced CollectionView with a BindableLayout -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding LikedSongs}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="model:Song">
                                    <Grid Padding="0,8" ColumnDefinitions="Auto,*,Auto">
                                        <Border StrokeShape="RoundRectangle 5" StrokeThickness="0" WidthRequest="50" HeightRequest="50">
                                            <Image Aspect="AspectFill" Source="{Binding ImageUrl, TargetNullValue='dotnet_bot.png'}"/>
                                        </Border>
                                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="10,0">
                                            <Label Text="{Binding Title}" TextColor="White"/>
                                            <Label Text="{Binding SingerName}" TextColor="Gray" FontSize="12"/>
                                        </VerticalStackLayout>
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:LibraryViewModel}}, Path=PlayLikedSongCommand}" CommandParameter="{Binding .}"/>
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <!-- Show this label only if the LikedSongs collection is empty -->
                        <Label Text="Songs you like will appear here." TextColor="Gray" Padding="10"
                               IsVisible="{Binding LikedSongs.Count, Converter={StaticResource IntToBoolConverter}}"/>

                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        <ActivityIndicator Grid.Row="1" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#1DB954" VerticalOptions="Center"/>
    </Grid>
</ContentPage>